<div class="pure-g application-form">
  <div class="pure-u-1 pure-u-md-1-5">
  </div>
  <div class="l-box-lrg pure-u-1 pure-u-md-3-5">
    <%= form_for @dependent, url: step3_users_path, method: :post, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>

        <div class="pure-g">
          <div class="pure-u-1">
            <legend>Great job! Next we'll need some information about those living with you</legend>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :first_name %>
          </div>
          <div class="pure-u-1-2">
            <%= f.text_field :first_name %>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :last_name %>
          </div>
          <div class="pure-u-1-2">
            <%= f.text_field :last_name %>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :gender %>
          </div>
          <div class="pure-u-1-2">
            <div class="pure-u-1-3">
              <div class="pure-u-1-5">
                <%= f.radio_button :gender, 'female' %>
              </div>
              <div class="pure-u-1-3">
                <%= label :gender, 'Female' %>
              </div>
            </div>
            <div class="pure-u-1-3">
              <div class="pure-u-1-5">
                <%= f.radio_button :gender, 'male' %>
              </div>
              <div class="pure-u-1-3">
                <%= label :gender, 'Male' %>
              </div>
            </div>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :dob, "Date of Birth" %>
          </div>
          <div class="pure-u-1-2 date">
            <%= f.date_select :dob, start_year: Date.current.year - 120, end_year: Date.current.year - 18%>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :ssn, "Social Security Number" %>
          </div>
          <div class="pure-u-1-2">
            <%= f.text_field :ssn %>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :relationship, "Relationship to you" %>
          </div>
          <div class="pure-u-1-2">
            <%= f.text_field :relationship %>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :monthly_income %>
          </div>
          <div class="pure-u-1-2">
            <%= f.number_field :monthly_income, placeholder: '$' %>
          </div>

          <div class="pure-u-1-2">
            <%= f.label :source_of_income %>
          </div>
          <div class="pure-u-1-2">
            <%= f.text_field :source_of_income %>
          </div>

          <div class="pure-u-1-3">
            <%= f.submit "Next", :class => 'pure-button' %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>